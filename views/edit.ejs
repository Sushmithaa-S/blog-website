<%- include('partials/header.ejs') %>

<form action="/edit/<%= blog.id %>" method="POST">

<div class="viewport-container">
  <div class="blog-card">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" name="title" id="title" value="<%= blog.title %>">
    </div>
    <div class="form-group">
      <label for="author">Author</label>
      <input type="text" name="author" id="Author" value="<%= blog.author %>">
    </div>

    <div class="form-group">
      <label for="blog-content">Write your thoughts here.</label>
      <textarea id="blog-content" name="content"><%= blog.content %></textarea>
    </div>
    <div class="button-wrapper">
       <button type="submit">Save changes</button>
    </div>
  </div>
</div>
</form>

<%- include('partials/footer.ejs') %>